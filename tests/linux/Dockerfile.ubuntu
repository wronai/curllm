# Ubuntu Test Environment for curllm
FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    curl \
    wget \
    git \
    build-essential \
    libssl-dev \
    libffi-dev \
    ca-certificates \
    gnupg \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Create test user (non-root)
RUN useradd -m -s /bin/bash testuser

# Setup workspace
WORKDIR /test
RUN chown testuser:testuser /test

USER testuser

# Install Ollama (for LLM)
RUN curl -fsSL https://ollama.ai/install.sh | sh || true

# Test script will install curllm from PyPI
COPY --chown=testuser:testuser test_pypi_install.sh /test/
RUN chmod +x /test/test_pypi_install.sh

CMD ["/test/test_pypi_install.sh"]
