# Price Comparator - Environment Variables
# Copy to .env and configure

# Server settings
PORT=8080
DEBUG=false

# Concurrency settings
MAX_CONCURRENT_URLS=5
EXTRACTION_TIMEOUT=120

# LLM Configuration
# Option 1: Local Ollama (default)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.2

# Option 2: OpenAI
# LLM_PROVIDER=openai/gpt-4o-mini
# OPENAI_API_KEY=sk-your-key-here

# Option 3: Anthropic
# LLM_PROVIDER=anthropic/claude-3-haiku-20240307
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Option 4: Google Gemini
# LLM_PROVIDER=gemini/gemini-2.0-flash
# GEMINI_API_KEY=your-key-here

# Option 5: Groq (fast cloud Llama)
# LLM_PROVIDER=groq/llama3-70b-8192
# GROQ_API_KEY=your-key-here
